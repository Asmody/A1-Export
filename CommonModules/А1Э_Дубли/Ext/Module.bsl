	НаборЗаписей = Менеджер.СоздатьНаборЗаписей();
	НаборЗаписей.Отбор.Регистратор.Установить(Ссылка);
	НаборЗаписей.Прочитать();
	НаборЗаписей.ОбменДанными.Загрузка = Истина;
	РазбивкаТабличнаяЧасть = ПараОбъект.Значение;
	Для Каждого ПараТабличнаяЧасть Из РазбивкаТабличнаяЧасть Цикл
		Для Каждого СтрокаИспользования Из ПараТабличнаяЧасть.Значение Цикл
			Запись = НаборЗаписей[СтрокаИспользования.НомерСтроки - 1];
			Если НЕ ПроверитьИЗаменитьЗначение(Запись, СтрокаИспользования, СоответствиеДублей, ОшибкиПриЗамене) Тогда
				Возврат Ложь;
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	НаборЗаписей.Записать(Истина);
	Возврат Истина;
